<core:FragmentDefinition xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Dialog id="createDialog" resizable="true" class="sapUiNoContentPadding">
        <beginButton>
            <Button text="Save" type="Emphasized" press=".onSaveButton"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCloseDialog"/>
        </endButton>
        <l:VerticalLayout class="sapUiContentPadding" width="100%">
            <Label text="Select doctor: " labelFor="selectDoctor"/>
            <Select id="selectDoctor" forceSelection="false" change=".onChangeSelect" width="100%" items="{
                        path: '/appointments'
                    }">
                <core:Item key="{name}" text="{name}"/>
            </Select>
            <Label text="Patient Name: " labelFor="inputPatientName" class="sapUiNoContentPadding"/>
            <Input id="inputPatientName" required="true" change=".onChangeInput" />
            <Label text="Procedure: " labelFor="inputProcedure"/>
            <Input id="inputProcedure" required="true" change=".onChangeInput" />
            <Label text="Start date: " labelFor="startDate"/>
            <DateTimePicker id="startDate" displayFormat="short" required="true" change=".onChangeDTP"/>
            <Label text="End date: " labelFor="endDate"/>
            <DateTimePicker id="endDate" displayFormat="short" required="true" change=".onChangeDTP"/>
        </l:VerticalLayout>
    </Dialog>
</core:FragmentDefinition>